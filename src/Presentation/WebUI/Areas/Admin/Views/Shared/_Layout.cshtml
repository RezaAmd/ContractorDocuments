@using System.Globalization
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - کلینیک مصالح ساختمانی جلالی</title>
    <meta name="robots" content="noindex, nofollow">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fonts/font-awesome/v6.5.2/css/all.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/public.common.css" asp-append-version="true" />
</head>
<body class="text-start">
    <nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark" style="z-index:2000;">
        <div class="container-fluid">
            <a class="navbar-brand fw-bolder" href="/Admin/Dashboard">پنل مدیریت</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Dashboard"><i class="far fa-gauge me-1"></i> داشبورد</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Project"><i class="far fa-building-memo me-1"></i> پروژه ها</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            اطلاعات پایه
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="nav-link" asp-area="Admin" asp-controller="User"><i class="far fa-users me-1"></i> کاربران</a>
                            </li>
                            <li>
                                <a class="nav-link" asp-area="Admin" asp-controller="Contract"><i class="far fa-file-contract me-1"></i> قرارداد ها</a>
                            </li>
                            <li>
                                <a class="nav-link" asp-area="Admin" asp-controller="Material"><i class="far fa-truck-ramp-box me-1"></i> مصالح</a>
                            </li>
                            <li>
                                <a class="nav-link" asp-area="Admin" asp-controller="Service"><i class="far fa-user-helmet-safety me-1"></i> خدمات</a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    @* <li class="nav-item">
                    <a class="nav-link" href="#" data-theme="dark" data-bs-title="تاریک" data-bs-placement="bottom"><i class="fa fa-moon"></i></a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="#" data-theme="light" data-bs-title="روشن" data-bs-placement="bottom"><i class="fa fa-sun"></i></a>
                    </li>*@
                    <li class="nav-item">
                        <a class="nav-link sign-out-controller" href="#" data-bs-title="خروج از حساب" data-bs-placement="bottom">
                            <i class="fa fa-right-from-bracket"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main role="main">
        <div class="container-fluid py-4">
            @RenderBody()
        </div>
    </main>
    <footer class="fixed-bottom bg-body py-2">
        <div class="container-fluid text-center">
            <label class="small text-muted" data-bs-title="امروز" data-bs-placement="top">
                @DateTime.Now.ToString("dd MMMM yyyy", new CultureInfo("fa-IR"))
            </label>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/rest.js" asp-append-version="true"></script>
    <script src="~/js/multiple-theme.js" asp-append-version="true"></script>
    <script src="~/js/public.common.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
