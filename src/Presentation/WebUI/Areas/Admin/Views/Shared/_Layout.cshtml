<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - کلینیک مصالح ساختمانی جلالی</title>
    <meta name="robots" content="noindex, nofollow">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fonts/font-awesome/v6.5.2/css/all.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/public.common.css" asp-append-version="true" />
</head>
<body class="text-start">
    <nav class="navbar navbar-expand-lg bg-body-secondary">
        <div class="container-fluid">
            <a class="navbar-brand fw-bolder" href="/Admin/Dashboard">پنل مدیریت</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Dashboard"><i class="far fa-gauge me-1"></i> داشبورد</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Project"><i class="far fa-building-memo me-1"></i> پروژه ها</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            اطلاعات پایه
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="nav-link" asp-area="Admin" asp-controller="User"><i class="far fa-users me-1"></i> کاربران</a>
                            </li>
                            <li>
                                <a class="nav-link" asp-area="Admin" asp-controller="Contract"><i class="far fa-file-contract me-1"></i> قرارداد</a>
                            </li>
                            <li>
                                <a class="nav-link" asp-area="Admin" asp-controller="Material"><i class="far fa-truck-ramp-box me-1"></i> مصالح</a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <ul class="navbar-nav mس-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link sign-out-controller" href="#">خروج</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <main role="main">
        <div class="container-fluid py-4">
            @RenderBody()
        </div>
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/rest.js" asp-append-version="true"></script>
    @* <script src="~/fonts/font-awesome/v6.5.2/js/all.js" asp-append-version="true"></script> *@
    <script src="~/js/public.common.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
